<p id="notice"><%= notice %></p>

<h1>Leaves</h1>

<table>
  <thead>
    <tr>
      <th>Quire</th>
      <th>Folio number</th>
      <th>Position</th>
      <th>Single</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leaf| %>
      <tr>
        <td><%= leaf.quire_id %></td>
        <td><%= leaf.folio_number %></td>
        <td><%= leaf.position %></td>
        <td><%= leaf.single %></td>
        <td><%= link_to 'Show', leaf %></td>
        <td><%= link_to 'Edit', edit_quire_leaf_path(@quire, leaf) %></td>
        <td><%= link_to 'Destroy', leaf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

